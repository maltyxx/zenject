{
  "name": "@maltyxx/zenject",
  "version": "1.0.0",
  "description": "A lightweight dependency injection framework for Bun.js applications",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check packages examples",
    "lint:fix": "biome check --apply packages examples",
    "format": "biome format --write --verbose packages examples"
  },
  "keywords": [
    "bun",
    "dependency-injection",
    "di",
    "ioc",
    "typescript",
    "container",
    "inversion-of-control"
  ],
  "author": "Yoann Vanitou",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.10",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
