{
  "name": "@maltyxx/zenject",
  "version": "1.0.0",
  "description": "A lightweight dependency injection framework for Bun.js applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/common-tokens.js",
      "types": "./dist/tokens/common-tokens.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "zenject": "./dist/cli/index.js"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --minify",
    "dev": "bun build ./src/index.ts --outdir ./dist --target node --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "chmod +x ./src/cli/index.ts && bun run build",
    "postinstall": "chmod +x ./dist/cli/index.js",
    "lint": "biome check src benchmarks examples",
    "lint:fix": "biome check --apply src benchmarks examples",
    "format": "biome format --write --verbose src benchmarks examples"
  },
  "keywords": [
    "bun",
    "dependency-injection",
    "di",
    "ioc",
    "typescript",
    "container",
    "inversion-of-control"
  ],
  "author": "Yoann Vanitou",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.10",
    "typedoc": "^0.28.3",
    "typedoc-plugin-markdown": "^4.0.0-next.36",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
