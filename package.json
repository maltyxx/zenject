{
  "name": "@maltyxx/zenject",
  "version": "1.1.0",
  "description": "A lightweight dependency injection framework for Bun.js applications",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --watch apps/hello-world/src/main.ts",
    "build": "bun build ./apps/hello-world/src/main.ts --format=esm --target=bun --outdir=dist --minify --sourcemap=external",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "lint": "biome check --write packages apps",
    "format": "biome format --write --verbose packages apps"
  },
  "keywords": [
    "bun",
    "dependency-injection",
    "di",
    "ioc",
    "typescript",
    "container",
    "inversion-of-control"
  ],
  "author": "Yoann Vanitou",
  "license": "MIT",
  "engines": {
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@zenject/config": "workspace:*",
    "@zenject/core": "workspace:*",
    "@zenject/logger": "workspace:*",
    "@zenject/testing": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/bun": "^1.2.22"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
